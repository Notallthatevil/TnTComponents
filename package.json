{
  "name": "tntcomponents-js-tests",
  "private": true,
  "type": "module",
  "devDependencies": {
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:js": "npm run test"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "roots": [
      "<rootDir>/TnTComponents/Carousel/__tests__",
      "<rootDir>/TnTComponents/Core/__tests__",
      "<rootDir>/TnTComponents/Accordion/__tests__",
      "<rootDir>/TnTComponents/Animation/__tests__"
    ],
    "setupFiles": [
      "<rootDir>/TnTComponents/Carousel/jest.setup.js"
    ],
    "moduleFileExtensions": [
      "js",
      "mjs"
    ],
    "transform": {},
    "testPathIgnorePatterns": [
      "/node_modules/",
      "jest.global.js"
    ]
  }
}
