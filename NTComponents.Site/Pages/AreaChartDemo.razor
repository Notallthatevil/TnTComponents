@page "/area-chart"
@using NTComponents.Charts
@using NTComponents.Charts.Core
@using NTComponents.Charts.Core.Axes

<div class="p-4">
   <h3>Area Chart Demo</h3>

   <div style="height: 500px; width: 100%;" class="mt-4 border rounded p-2">
      <NTChart TData="DataItem" Title="Revenue vs Costs Over Time" RangePadding="0.05">
         @{
            var sharedXAxis = new NTXAxisOptions { Title = "Month" };
            var sharedYAxis = new NTYAxisOptions { Title = "Value ($)" };
         }
         <NTAreaSeries TData="DataItem" Data="@Data" XValue="@(d => d.Id)" YValueSelector="@(d => d.Revenue)"
            Title="Revenue" Color="TnTColor.Primary" AreaOpacity="0.3f"
            XAxis="@sharedXAxis" YAxis="@sharedYAxis" />

         <NTAreaSeries TData="DataItem" Data="@Data" XValue="@(d => d.Id)" YValueSelector="@(d => d.Costs)"
            Title="Costs" Color="TnTColor.Error" AreaOpacity="0.3f"
            XAxis="@sharedXAxis" YAxis="@sharedYAxis" />
      </NTChart>
   </div>
</div>

@code {
   public class DataItem
   {
      public int Id { get; set; }
      public string Month { get; set; } = string.Empty;
      public decimal Revenue { get; set; }
      public decimal Costs { get; set; }
   }

   private List<DataItem> Data = new()
{
new DataItem { Id = 1, Month = "Jan", Revenue = 4000m, Costs = 2400m },
new DataItem { Id = 2, Month = "Feb", Revenue = 3000m, Costs = 1398m },
new DataItem { Id = 3, Month = "Mar", Revenue = 2000m, Costs = 9800m },
new DataItem { Id = 4, Month = "Apr", Revenue = 2780m, Costs = 3908m },
new DataItem { Id = 5, Month = "May", Revenue = 1890m, Costs = 4800m },
new DataItem { Id = 6, Month = "Jun", Revenue = 2390m, Costs = 3800m },
new DataItem { Id = 7, Month = "Jul", Revenue = 3490m, Costs = 4300m },
};
}
