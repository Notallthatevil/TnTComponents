@page "/advanced-axes"
@* Demo for advanced axis features *@

<div class="container py-4">
    <h1>Advanced Axes Demo</h1>
    <p class="lead">Exploring non-linear scales and radial coordinate systems.</p>

    <div class="row mt-4">
        <div class="col-md-6 mb-4">
            <div class="card p-3 shadow-sm">
                <h3>Logarithmic Y Axis</h3>
                <div style="height: 400px;">
                    <NTChart TData="DataPoint" Title="Exponential Growth"
                        XAxis="@(new NTXAxisOptions { Title = "X Axis" })"
                        YAxis="@(new NTYAxisOptions { Title = "Logarithmic Y", Scale = NTAxisScale.Logarithmic })">
                        <NTLineSeries TData="DataPoint" Data="@_exponentialData" Title="Exponential"
                            XValue="@(p => p.X)" YValueSelector="@(p => p.Y)" Color="TnTColor.Primary"
                            PointStyle="PointStyle.Filled" />
                    </NTChart>
                </div>
                <div class="mt-2 text-muted small">
                    Values: 1, 10, 100, 1000, 10000. In a linear scale, this would be a very steep curve. On a logarithmic scale, it appears as a straight line.
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <div class="card p-3 shadow-sm">
                <h3>Logarithmic X Axis</h3>
                <div style="height: 400px;">
                    <NTChart TData="DataPoint" Title="Logarithmic Timeline"
                        XAxis="@(new NTXAxisOptions { Title = "Log Scale (X)", Scale = NTAxisScale.Logarithmic })"
                        YAxis="@(new NTYAxisOptions { Title = "Linear Value" })">
                        <NTLineSeries TData="DataPoint" Data="@_logXData" Title="Frequency Response"
                            XValue="@(p => p.X)" YValueSelector="@(p => p.Y)" Color="TnTColor.Success"
                            PointStyle="PointStyle.Filled" />
                    </NTChart>
                </div>
                <div class="mt-2 text-muted small">
                    X values spaced at powers of 10. Common for scientific and engineering data.
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12 mb-4">
            <div class="card p-3 shadow-sm">
                <h3>Radar Chart (Radial Axis)</h3>
                <div style="height: 500px;">
                    <NTChart TData="RadarPoint" Title="Skill Matrix" 
                        RadialAxis="@(new NTRadialAxisOptions { 
                            Title = "Abilities",
                            Levels = 5,
                            Shape = RadialAxisShape.Polygon,
                            Labels = _radarLabels 
                        })">
                        <NTRadarSeries TData="RadarPoint" Data="@_radarData1" Title="Developer A"
                            ValueSelector="@(p => p.Value)" Color="TnTColor.Primary" />
                        <NTRadarSeries TData="RadarPoint" Data="@_radarData2" Title="Developer B"
                            ValueSelector="@(p => p.Value)" Color="TnTColor.Secondary" />
                        <NTLegend TData="RadarPoint" Position="LegendPosition.Bottom" />
                    </NTChart>
                </div>
                <div class="mt-2 text-muted small">
                    Radar chart with a polygonal radial axis. Labels represent skills on the perimeter.
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-6 mb-4">
            <div class="card p-3 shadow-sm">
                <h3>Circular Radial Axis</h3>
                <div style="height: 400px;">
                    <NTChart TData="RadarPoint" Title="Circular Profile" 
                        RadialAxis="@(new NTRadialAxisOptions { 
                            Levels = 4,
                            Shape = RadialAxisShape.Circle,
                            Labels = _radarLabels 
                        })">
                        <NTRadarSeries TData="RadarPoint" Data="@_radarData1" Title="Group 1"
                            ValueSelector="@(p => p.Value)" Color="TnTColor.Tertiary" />
                    </NTChart>
                </div>
                <div class="mt-2 text-muted small">
                    Uses concentric circles instead of polygons for the grid.
                </div>
            </div>
        </div>

        <div class="col-12 mb-4">
            <div class="card p-3 shadow-sm">
                <h3>Dual Y Axes</h3>
                <div style="height: 400px;">
                    <NTChart TData="DataPoint" Title="Revenue and Units Correlation">
                        @{
                            var sharedX = new NTXAxisOptions { Title = "Quarter" };
                            var revY = new NTYAxisOptions { Title = "Revenue ($)" };
                            var unitsY = new NTYAxisOptions { Title = "Units Sold" };
                        }
                        <NTBarSeries TData="DataPoint" Data="@_revenueData" XValue="@(p => p.X)"
                            YValueSelector="@(p => p.Y)" Color="TnTColor.Primary" Title="Revenue"
                            XAxis="@sharedX" YAxis="@revY" />
                        <NTLineSeries TData="DataPoint" Data="@_unitsData" XValue="@(p => p.X)"
                            YValueSelector="@(p => p.Y)" Color="TnTColor.Secondary" Title="Units Sold"
                            PointStyle="PointStyle.Filled" XAxis="@sharedX" YAxis="@unitsY" />
                        <NTLegend TData="DataPoint" Position="LegendPosition.Bottom" />
                    </NTChart>
                </div>
                <div class="mt-2 text-muted small">
                    This chart uses two independent Y axes. Revenue is measured on the left axis (Blue bars), while Units Sold is measured on the right axis (Gray line).
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    public record DataPoint(double X, decimal Y);
    public record RadarPoint(decimal Value);

    private List<DataPoint> _revenueData = [
        new(1, 45000m), new(2, 52000m), new(3, 48000m), new(4, 61000m)
    ];

    private List<DataPoint> _unitsData = [
        new(1, 1200m), new(2, 1100m), new(3, 1400m), new(4, 1300m)
    ];

    private List<DataPoint> _exponentialData = Enumerable.Range(0, 6)
        .Select(i => new DataPoint(i, (decimal)Math.Pow(10, i)))
        .ToList();

    private List<DataPoint> _logXData = Enumerable.Range(0, 6)
        .Select(i => new DataPoint(Math.Pow(10, i), (decimal)(i * 20)))
        .ToList();

    private List<string> _radarLabels = ["Coding", "Design", "Logic", "Strategy", "Speed", "Teamwork"];
    
    private List<RadarPoint> _radarData1 = [
        new(80m), new(40m), new(90m), new(70m), new(50m), new(95m)
    ];

    private List<RadarPoint> _radarData2 = [
        new(60m), new(95m), new(40m), new(50m), new(90m), new(60m)
    ];
}
