@namespace TnTComponents
@using TnTComponents.Core
@inherits TnTPageScriptComponent<TnTImageButton>

<button is="tnt-button"
    @attributes="AdditionalAttributes"
    class="@CssClass"
    style="@CssStyle"
    name="@Name"
    type="@Type.ToHtmlType()"
    disabled="@Disabled"
    autofocus="@AutoFocus"
    @onclick="OnClick">
    @Icon.Render()
</button>

@RenderPageScript()