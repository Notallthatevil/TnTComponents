@namespace TnTComponents
@using TnTComponents.Core
@inherits TnTComponentBase

<button is="tnt-button"
        @attributes="AdditionalAttributes"
        class="@CssClass"
        style="@CssStyle"
        name="@Name"
        type="@Type.ToHtmlType()"
        disabled="@Disabled"
        autofocus="@AutoFocus"
        @onclick="OnClick"
        @onclick:stopPropagation="StopPropagation">
    @ChildContent
</button>

<TnTPageScript Src="@JsModulePath" />