@namespace TnTComponents
@using TnTComponents.Core
@using TnTComponents.Interfaces
@inherits NavLink
@implements ITnTComponentBase
@implements ITnTInteractable

<a @attributes="AdditionalAttributes"
   class="@ElementClass"
   style="@ElementStyle"
   lang="@ElementLang"
   id="@ElementId"
   title="@ElementTitle"
   autofocus="@AutoFocus"
   @ref="Element">
   @Icon?.Render()
        @ChildContent
        @if (EnableRipple) {
            <TnTRippleEffect />
        }
</a>