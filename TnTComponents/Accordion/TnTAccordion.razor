@using TnTComponents.Core
@inherits TnTComponentBase
@namespace TnTComponents
<CascadingValue IsFixed="true" Value="this">
    <tnt-accordion @attributes="AdditionalAttributes"
                   class="@ElementClass"
                   style="@ElementStyle"
                   title="@ElementTitle"
                   id="@ElementId"
                   lang="@ElementLang"
                   autofocus="@AutoFocus"
                   @ref="Element">
        <DeferRendering>
            @foreach (var child in _children)
            {
                @child.RenderChild()
            }
        </DeferRendering>
        @ChildContent
    </tnt-accordion>
</CascadingValue>

<TnTPageScript Src="./_content/TnTComponents/Accordion/TnTAccordion.razor.js" />
