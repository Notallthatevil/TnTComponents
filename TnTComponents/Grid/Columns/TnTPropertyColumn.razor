@namespace TnTComponents
@using TnTComponents.Grid.Columns
@typeparam TGridItem
@typeparam TProp
@inherits TnTColumnBase<TGridItem>


@code {
	public override RenderFragment RenderCellContent(TGridItem gridItem) => (__builder) => {
		var content = _cellTextFunc?.Invoke(gridItem);
		if (ShowContentAsTooltip) {
			<TnTTooltip>
				@content
			</TnTTooltip>
		}

		<text>@content</text>
	};
}