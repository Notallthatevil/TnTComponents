@inherits TnTComponentBase
@typeparam TInputType

<label class="@LabelClass">
    <span class="@ContainerClass">
        @TnTIconComponent.RenderIcon(IconType, StartIcon, "start-icon")
            <input @attributes="AdditionalAttributes"
                   @ref="Element"
                   aria-label="@AriaLabel"
                   type="radio"
                   class="@GetClass()"
                   name="@_context?.GroupName"
                   style="@Style"
                   readonly="@ReadOnly"
                   title="@Title"
                   disabled="@Disabled"
                   checked="@_context?.CurrentValue?.Equals(Value)"
                   required="@Required"
                   value="@Value">
        @if (!string.IsNullOrWhiteSpace(Label)) {
            <span class="@LabelTextClass">
                @Label
            </span>
        }
        @TnTIconComponent.RenderIcon(IconType, EndIcon, "end-icon")
    </span>

</label>