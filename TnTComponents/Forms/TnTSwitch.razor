@inherits TnTCheckbox

<div class="@GetCssClass()" theme="@Theme" @onclick="Toggle">
    <input type="@InputType"
           disabled="@Disable"
           checked="@Value"
           @bind="@Value"
           @bind:event="oninput"
           @onchange="OnChange"
           @onfocusin=@(() => Active = true)
           @onfocusout=@(() => Active = false)>

    <span>
    </span>

    <div class="tnt-input-field-switch-label">
        @GetIcon()
        @if (!string.IsNullOrWhiteSpace(Label)) {
            @Label
        }
    </div>
</div>

@code {
    [Parameter]
    public override string BaseCssClass { get; set; } = "tnt-input-field-switch";
}
