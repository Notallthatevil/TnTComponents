@inherits TnTBaseComponent

@if (_layout?.Responsive ?? false) {
    <TnTMediaCallback Query="(max-width:768px)" OnChangedCallback="@((isSmallScreen) => { SideBarExpanded = !isSmallScreen; _smallScreen = isSmallScreen; })"></TnTMediaCallback>
}

<div class="@GetCssClass() @(SideBarExpanded && !_smallScreen ? "expanded" : string.Empty) " theme="@Theme">
    @ChildContent
</div>


@code {
    [CascadingParameter]
    private TnTLayout? _layout { get; set; }

    [Parameter]
    public RenderFragment ChildContent { get; set; } = default!;

    [Parameter]
    public bool SideBarExpanded { get; set; } = false;

    [Parameter]
    public override string BaseCssClass { get; set; } = "tnt-body";

    private bool _smallScreen = false;
}