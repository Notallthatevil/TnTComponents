@inherits TnTBaseComponent

@code {
    internal RenderFragment GetIcon() {
        return RenderIcon(IconType, Icon);
    }


    public static RenderFragment RenderIcon(IconType iconType, string? icon, string? @class = null) {
        if (!string.IsNullOrWhiteSpace(icon)) {
            switch (iconType) {
                case IconType.MaterialIcons:
                    return@<i class="@(@class) material-icons">@icon</i>;

                case IconType.FontAwesome:
                    return@<i class="@(@class) fa @icon"></i>;
            }
        }
        return default!;
    }
}