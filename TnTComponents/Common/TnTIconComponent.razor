@inherits TnTBaseComponent

@code {
    internal RenderFragment GetIcon() {
        if (!string.IsNullOrWhiteSpace(Icon)) {
            switch (IconType) {
                case IconType.MaterialIcons:
                    return@<i class="tnt-icon-component material-icons">@Icon</i>;

                case IconType.FontAwesome:
                    return@<i class="tnt-icon-component fa @Icon"></i>;
            }
        }
        return default!;
    }
}