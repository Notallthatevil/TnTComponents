@page "/InfiniteScroll"
@rendermode InteractiveAuto
@using TnTComponents
@using TnTComponents.Virtualization

<h3>InfiniteScroll</h3>

<TnTComponents.TnTVirtualize TItem="int" ItemsProvider="GetItems">

</TnTComponents.TnTVirtualize>


@code {
    async ValueTask<TnTVirtualizeItemsProviderResult<int>> GetItems(TnTVirtualizeItemsProviderRequest<int> request) {
        await Task.Delay(1000); // Simulate async loading
        return new TnTVirtualizeItemsProviderResult<int>() {
                Items = Enumerable.Range(request.StartIndex, 50).ToList(),
                TotalItemCount = 1000
            };
    }
}
