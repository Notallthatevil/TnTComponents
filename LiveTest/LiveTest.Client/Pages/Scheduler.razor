@page "/scheduler"
@using TnTComponents
@using TnTComponents.Scheduler
@using TnTComponents.Scheduler.Events
@rendermode InteractiveAuto

<h3>Scheduler</h3>


<TnTScheduler FirstDate="today"
              TEventType="TnTEvent"
              Events="TasksList.ToArray()"
              DisabledDateTimes="[TnTDisabledDateTime.DisabledDayOfWeek(TnTDayOfWeekFlag.Sunday | TnTDayOfWeekFlag.Saturday | TnTDayOfWeekFlag.Wednesday, new TimeOnly(0, 0), new TimeOnly(12, 0))]">
    <TnTWeekView StartViewOn="DayOfWeek.Tuesday"
                 DropEventCallback="@((TnTDropEventArgs<TnTEvent> args) => DropEvent(args))" />
</TnTScheduler>

<br />
<div class="console">@fakeConsole</div>

