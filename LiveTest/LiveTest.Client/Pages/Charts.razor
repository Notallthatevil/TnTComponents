@page "/charts"
@rendermode InteractiveWebAssembly

@code {
    record DataPoint(string Name, double Value);

    List<DataPoint> data = new()
    {
        new("A", 10),
        new("B", 20),
        new("C", 15),
        new("D", 25)
    };
}

<NTComponents.Charts.NTBarChart T="DataPoint"
                                Data="data"
                                YValueSelector="x => x.Value"
                                XLabelSelector="x => x.Name"
                                Title="Sample Bar Chart"
                                XAxisLabel="Categories"
                                YAxisLabel="Values"
                                style="height:500px;width:500px" />