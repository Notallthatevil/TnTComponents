@page "/card"
@using TnTComponents
@using TnTComponents.Enum

@for (var i = 0; i < 12; ++i) {
    var j = i + 1;
    var k = 0;
    var cardType = _cardType;
    <TnTRow>
        @for (; k < 12; k += j) {
            @if (k + j <= 12) {
                <TnTColumn S="@j">
                    <TnTCard Type="@cardType">
                        @j
                    </TnTCard>
                </TnTColumn>
            }
            else {
                var l = 12 - k;
                <TnTColumn S="@l">
                    <TnTCard Type="@cardType">
                        @l
                    </TnTCard>
                </TnTColumn>
            }
        }
        </TnTRow>
    UpdateCardType();
}
