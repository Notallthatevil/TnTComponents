@code {
    private CardType _cardType = CardType.Elevated;

    private void UpdateCardType() {
        switch (_cardType) {
            case CardType.Elevated:
                _cardType = CardType.Filled;
                break;
            case CardType.Filled:
                _cardType = CardType.Outlined;
                break;
            case CardType.Outlined:
                _cardType = CardType.Elevated;
                break;
            default:
                _cardType = CardType.Elevated;
                break;
        }
    }
}