@code {
    [Parameter]
    [SupplyParameterFromQuery]
    public int TabCount { get; set; } = 3;


    protected override void OnParametersSet() {
        base.OnParametersSet();
        if (TabCount < 3) {
            TabCount = 3;
        }
    }
