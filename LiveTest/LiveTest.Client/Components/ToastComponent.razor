@using NTComponents



<NTComponents.TnTButton OnClickCallback="ShowBasic">
    Show Basic
</NTComponents.TnTButton>

<NTComponents.TnTButton OnClickCallback="ShowInfo">
    Show Info
</NTComponents.TnTButton>

<NTComponents.TnTButton OnClickCallback="ShowSuccess">
    Show Success
</NTComponents.TnTButton>

<NTComponents.TnTButton OnClickCallback="ShowWarning">
    Show Warning
</NTComponents.TnTButton>

<NTComponents.TnTButton OnClickCallback="ShowError">
    Show Error
</NTComponents.TnTButton>


@code {
    [Inject]
    private ITnTToastService _service { get; set; } = default!;

    private async Task ShowBasic() {
        await _service.ShowAsync("My title", "My longer message description that takes up space My longer message description that takes up space My longer message description that takes up space My longer message description that takes up space");
    }

    private async Task ShowInfo() {
        await _service.ShowInfoAsync("My title", "My longer message description that takes up space");
    }

    private async Task ShowSuccess() {
        await _service.ShowSuccessAsync("My title", "My longer message description that takes up space");

    }
    private async Task ShowWarning() {
        await _service.ShowWarningAsync("My title", "My longer message description that takes up space");

    }
    private async Task ShowError() {
        await _service.ShowErrorAsync("My title", "My longer message description that takes up space", timeout: 10000);
    }
}