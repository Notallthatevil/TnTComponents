@using System.ComponentModel.DataAnnotations
@using TnTComponents
@rendermode InteractiveAuto
<TnTForm Model="@_model" Appearance="FormAppearance.Outlined">
    <DataAnnotationsValidator/>
    <TnTInputDateTime Appearance="FormAppearance.Filled" @bind-Value="@_model.A" />

    <TnTLabel Label="My Label" BackgroundColor="TnTColor.Surface" Appearance="FormAppearance.Filled">
        <TnTInputDateTime Appearance="FormAppearance.Filled" @bind-Value="@_model.A" />
    </TnTLabel>
    <TnTInputDateTime StartIcon="MaterialIcon.AccessAlarm" Appearance="FormAppearance.Filled" @bind-Value="@_model.A" EndIcon="MaterialIcon.AccountBalanceWallet" />

    <TnTLabel Label="My Label" BackgroundColor="TnTColor.Surface" Appearance="FormAppearance.Filled">
        <TnTInputDateTime StartIcon="MaterialIcon.AccessAlarm" Appearance="FormAppearance.Filled" @bind-Value="@_model.A" EndIcon="MaterialIcon.AccountBalanceWallet" />
    </TnTLabel>
</TnTForm>

@_value


@code {
    private double _value = 0.0;
    
    private Model _model = new();

    class Model {
        [Required]
        public DateTime? A { get; set; }
    }


}