@using System.ComponentModel.DataAnnotations
@using TnTComponents
@rendermode InteractiveAuto
<TnTForm Model="@_model" Appearance="FormAppearance.Outlined">
    <DataAnnotationsValidator />

    <TnTLabel Label="My Label" BackgroundColor="TnTColor.Surface" Appearance="FormAppearance.Filled">
        <TnTInputCheckbox @bind-Value="@_model.C" />
    </TnTLabel>

    <TnTLabel Label="My Label" BackgroundColor="TnTColor.Surface" Appearance="FormAppearance.Filled">
        <TnTInputText  @bind-Value="@_model.S"   />
    </TnTLabel>

    <TnTLabel Label="My Lable" BackgroundColor="TnTColor.Surface" Appearance="FormAppearance.Filled">
        <TnTInputText Placeholder="MyPlacholder" @bind-Value="@_model.S" />
    </TnTLabel>

    <TnTInputRadioGroup @bind-Value="_model.A" Appearance="FormAppearance.Filled" RadioGroupName="Group1" Direction="LayoutDirection.Vertical">
        @foreach (var a in Enum.GetValues<Test>()) {
            <TnTLabel Label="@a.ToString()" BackgroundColor="TnTColor.Surface" Appearance="FormAppearance.Filled">
                <TnTInputRadio Name="@a.ToString()" Value="a" />
            </TnTLabel>
        }
    </TnTInputRadioGroup>

    <TnTInputRadioGroup @bind-Value="_model.A" Appearance="FormAppearance.Filled" RadioGroupName="Group2" Direction="LayoutDirection.Vertical">
        @foreach (var a in Enum.GetValues<Test>()) {
            <TnTLabel Label="@a.ToString()" BackgroundColor="TnTColor.Surface" Appearance="FormAppearance.Filled">
                <TnTInputRadio Name="@a.ToString()" Value="a" />
            </TnTLabel>
        }
    </TnTInputRadioGroup>



    <TnTInputRadioGroup @bind-Value="_model.A" Appearance="FormAppearance.Filled" RadioGroupName="Group3" Direction="LayoutDirection.Horizontal">
        @foreach (var a in Enum.GetValues<Test>()) {
            <TnTLabel Label="@a.ToString()" BackgroundColor="TnTColor.Surface" Appearance="FormAppearance.Filled">
                <TnTInputRadio  Name="@a.ToString()" Value="a" />
            </TnTLabel>
        }
    </TnTInputRadioGroup>

    <TnTInputRadioGroup @bind-Value="_model.A" Appearance="FormAppearance.Filled" RadioGroupName="Group4" Direction="LayoutDirection.Horizontal">
        @foreach (var a in Enum.GetValues<Test>()) {
            <TnTLabel Label="@a.ToString()" BackgroundColor="TnTColor.Surface" Appearance="FormAppearance.Filled">
                <TnTInputRadio Name="@a.ToString()" Value="a" />
            </TnTLabel>
        }
    </TnTInputRadioGroup>

    <TnTLabel Label="Select">
        <TnTInputSelect @bind-Value="_model.D" Placeholder="Select a value">
            @foreach (var a in Enum.GetValues<Test>()) {
                <option @key="a" value="@a">@a.ToString()</option>
            }
        </TnTInputSelect>
    </TnTLabel>
</TnTForm>

