@using System.ComponentModel.DataAnnotations
@using TnTComponents
@rendermode InteractiveAuto
<TnTForm Model="@_model" Appearance="FormAppearance.Outlined">
    <DataAnnotationsValidator/>

    <TnTLabel Label="My Label" BackgroundColor="TnTColor.Surface" Appearance="FormAppearance.Filled">
        <TnTInputCheckbox Appearance="FormAppearance.Filled" @bind-Value="@_model.A" />
    </TnTLabel>

    <TnTLabel Label="My Label" BackgroundColor="TnTColor.Surface" Appearance="FormAppearance.Filled">
        <TnTInputCheckbox StartIcon="MaterialIcon.AccessAlarm" Appearance="FormAppearance.Filled" @bind-Value="@_model.A" EndIcon="MaterialIcon.AccountBalanceWallet" />
    </TnTLabel>
</TnTForm>

@_value


@code {
    private double _value = 0.0;
    
    private Model _model = new();

    class Model {
        public bool A { get; set; }
    }


}