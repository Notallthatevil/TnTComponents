@using System.ComponentModel.DataAnnotations
@using TnTComponents
@rendermode InteractiveAuto
<TnTForm Model="@_model" Appearance="FormAppearance.Outlined">

    <TnTInputText Appearance="FormAppearance.Filled" @bind-Value="@_model.A" BindAfter="@After" />

    <TnTLabel Label="My Label" BackgroundColor="TnTColor.Surface" Appearance="FormAppearance.Filled">
        <TnTInputText Appearance="FormAppearance.Filled" @bind-Value="@_model.A" BindAfter="@After" />
    </TnTLabel>
    <TnTInputText StartIcon="MaterialIcon.AccessAlarm" Appearance="FormAppearance.Filled" @bind-Value="@_model.A" BindAfter="@After" EndIcon="MaterialIcon.AccountBalanceWallet" />

    <TnTLabel Label="My Label" BackgroundColor="TnTColor.Surface" Appearance="FormAppearance.Filled">
        <TnTInputText StartIcon="MaterialIcon.AccessAlarm" Appearance="FormAppearance.Filled" @bind-Value="@_model.A" BindAfter="@After" EndIcon="MaterialIcon.AccountBalanceWallet" />
    </TnTLabel>
</TnTForm>

@_value
<br />
@_counter


@code {
    private string _value;
    private int _counter;

    private Model _model = new();

    private void After() {
        _counter++;
    }

    class Model {
        [StringLength(5, MinimumLength = 1), Required]
        public string A { get; set; }
    }


}