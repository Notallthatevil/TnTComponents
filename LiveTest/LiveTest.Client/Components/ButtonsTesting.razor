@using TnTComponents

<TnTFabButton BackgroundColor="TnTColor.Error">
    @MaterialIcon.Add.Render()
</TnTFabButton>

<TnTImageButton Icon="@MaterialIcon.Gamepad" />

<TnTComponents.TnTButton>
    @MaterialIcon.Search.Render()
    Button Text
    @MaterialIcon.Poll.Render()
</TnTComponents.TnTButton>

<TnTComponents.TnTButton Appearance="ButtonAppearance.Outlined">
    Button Text
    <TnTProgressIndicator Appearance="ProgressAppearance.Ring"/>
</TnTComponents.TnTButton>

<TnTComponents.TnTButton Appearance="ButtonAppearance.Text">
    Button Text
    <TnTProgressIndicator Appearance="ProgressAppearance.Linear"/>
</TnTComponents.TnTButton>

<TnTComponents.TnTButton Elevation="5">
    Button Text
</TnTComponents.TnTButton>

<TnTComponents.TnTButton Elevation="5" Appearance="ButtonAppearance.Outlined">
    Button Text
</TnTComponents.TnTButton>

<TnTComponents.TnTButton Elevation="5" Appearance="ButtonAppearance.Text">
    Button Text
</TnTComponents.TnTButton>

<TnTComponents.TnTButton BackgroundColor="TnTColor.Secondary" TextColor="TnTColor.Tertiary">
    Button Text
</TnTComponents.TnTButton>

<TnTComponents.TnTButton BackgroundColor="TnTColor.Secondary" TextColor="TnTColor.Tertiary" Appearance="ButtonAppearance.Outlined">
    Button Text
</TnTComponents.TnTButton>

<TnTComponents.TnTButton BackgroundColor="TnTColor.Secondary" TextColor="TnTColor.Tertiary" Appearance="ButtonAppearance.Text">
    Button Text
</TnTComponents.TnTButton>

<TnTComponents.TnTButton CornerRadius="new TnTComponents.Core.TnTBorderRadius(0)">
    Button Text
</TnTComponents.TnTButton>

<TnTComponents.TnTButton CornerRadius="new TnTComponents.Core.TnTBorderRadius(0)" Appearance="ButtonAppearance.Outlined">
    Button Text
</TnTComponents.TnTButton>

<TnTComponents.TnTButton CornerRadius="new TnTComponents.Core.TnTBorderRadius(0)" Appearance="ButtonAppearance.Text">
    Button Text
</TnTComponents.TnTButton>

<TnTComponents.TnTButton CornerRadius="new TnTComponents.Core.TnTBorderRadius(){StartEnd = 5}">
    Button Text
</TnTComponents.TnTButton>

<TnTComponents.TnTButton CornerRadius="new TnTComponents.Core.TnTBorderRadius(){StartEnd = 5}" Appearance="ButtonAppearance.Outlined">
    Button Text
</TnTComponents.TnTButton>

<TnTComponents.TnTButton CornerRadius="new TnTComponents.Core.TnTBorderRadius(){StartEnd = 5}" Appearance="ButtonAppearance.Text">
    Button Text
</TnTComponents.TnTButton>