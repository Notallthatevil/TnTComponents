</TnTFabButton>

<TnTImageButton Icon="@(new MaterialIcon(MaterialIcon.Gamepad))" />

<TnTComponents.TnTButton Disabled="true">
    <MaterialIcon Icon="@MaterialIcon.Search"/>
    Button Text
    <MaterialIcon Icon="@MaterialIcon.Poll"/>
</TnTComponents.TnTButton>

<TnTComponents.TnTButton Appearance="ButtonAppearance.Outlined" Disabled="true">
