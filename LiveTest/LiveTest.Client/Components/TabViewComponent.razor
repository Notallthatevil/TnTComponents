@using TnTComponents
@using TnTComponents.Enum
<TnTTabView SecondaryTabView="Alternative">
    @for (var i = 0; i < TabCount; ++i) {
        var j = i;
        var header = $"Header{j + 1}";
        <TnTTabChild Title="@header" Icon="MaterialIcon.Flight" Disabled="@((j % 5) == 0 || Disabled)">
            Content@(j + 1)
        </TnTTabChild>

    }
    @{
        var lastHeader = $"Header{TabCount + 1}";
        <TnTTabChild Title="@lastHeader" Disabled="Disabled">
            Content@(TabCount + 1)
        </TnTTabChild>
    }
</TnTTabView>

@code {
    [Parameter]
    public int TabCount { get; set; }
    [Parameter]
    public string Name { get; set; }
    [Parameter]
    public bool Alternative { get; set; }
    [Parameter]
    public bool Disabled { get; set; }
}