@page "/"
@using TnTComponents.Enum;
@using TnTComponents.Forms
@attribute [RenderModeInteractiveAuto]

<TnTLayout Responsive="true">
    <TnTHeader SideBarExpanded="@_sideBarExpanded">
        <TnTSideBarToggle Click="@(()=> _sideBarExpanded = !_sideBarExpanded)">

        </TnTSideBarToggle>
        <h1>
            My Title
        </h1>
        <button @onclick="@(()=>_dark = !_dark)">Toggle</button>
        <h1>
            123
        </h1>
        <h1>
            456
        </h1>
        <h1>
            789
        </h1>
        <h1>
            123123123
        </h1>
    </TnTHeader>
    <TnTSideBar Expanded="@_sideBarExpanded">
        <TnTSideBarList>
            <TnTSideBarListItem Icon="search" Href="/link">
                Search
            </TnTSideBarListItem>
            <TnTSideBarListItem Icon="home">
                Home
            </TnTSideBarListItem>
            <TnTSideBarListItem Href="/asdf">
                Value
            </TnTSideBarListItem>
        </TnTSideBarList>
    </TnTSideBar>
    <TnTBody SideBarExpanded="@_sideBarExpanded">

        <div class="tnt-row">
            <div class="tnt-col s12 m6">
                <TnTDatePicker FormType="FormType.Filled" DisabledDates="_disabledDates" AllowClear="false" @bind-Value="_value" Icon="search" Label="My Label" HelperText="My Helper Text" Placeholder="My Placeholder" MaxDate="new DateOnly(DateTime.Today.Year + 1, 12, 15)" MinDate="new DateOnly(DateTime.Today.Year - 1, 1, 15)">
                </TnTDatePicker>

                <TnTFormDropDown ListItems="Enumerable.Range(1, 1000).ToArray()">
                    <ListItemTemplate>
                        <i class="material-icons">search</i>
                        @context
                    </ListItemTemplate>
                </TnTFormDropDown>

                <TnTDatePicker FormType="FormType.Filled" MaxDate="DateOnly.FromDateTime(DateTime.Today).AddMonths(1)" MinDate="DateOnly.FromDateTime(DateTime.Today).AddMonths(-1)" @bind-Value="_value" Icon="search" Label="My Label" HelperText="My Helper Text" Placeholder="My Placeholder" />

                <TnTDatePicker FormType="FormType.Filled" TextProperty="Value" @bind-Value="_value" Icon="search" Label="My Label" HelperText="My Helper Text" Placeholder="My Placeholder" />
            </div>
            <div class="tnt-col s12 m6">
                <TnTDatePicker FormType="FormType.Filled" TextProperty="Value" @bind-Value="_value" Icon="search" Label="My Label" HelperText="My Helper Text" />

                <TnTDatePicker FormType="FormType.Filled" TextProperty="Value" @bind-Value="_value" Icon="search" Label="My Label" HelperText="My Helper Text" />

                <TnTDatePicker FormType="FormType.Filled" TextProperty="Value" @bind-Value="_value" Icon="search" Label="My Label" HelperText="My Helper Text" />
                <TnTCheckbox Label="My Label" HelperText="My Helper Text" />
                <TnTSwitch Label="My Label" HelperText="My Helper Text" />

            </div>
        </div>

        <TnTForm FormType="FormType.Outlined">
            <div class="tnt-row">
                <div class="tnt-col s12 m6">
                    <TnTDatePicker AllowClear="false" DisabledProperty="Disabled" TextProperty="Value" @bind-Value="_value" Icon="search" Label="My Label" HelperText="My Helper Text" Placeholder="My Placeholder">
                    </TnTDatePicker>

                    <TnTDatePicker DisabledProperty="Disabled" TextProperty="Value" @bind-Value="_value" Icon="search" Label="My Label" HelperText="My Helper Text" Placeholder="My Placeholder" />

                    <TnTDatePicker TextProperty="Value" @bind-Value="_value" Icon="search" Label="My Label" HelperText="My Helper Text" Placeholder="My Placeholder" />

                    <TnTCheckbox Label="My Label" HelperText="My Helper Text" />
                </div>
                <div class="tnt-col s12 m6">
                    <TnTDatePicker TextProperty="Value" @bind-Value="_value" Icon="search" Label="My Label" HelperText="My Helper Text" />

                    <TnTDatePicker TextProperty="Value" @bind-Value="_value" Icon="search" Label="My Label" HelperText="My Helper Text" />

                    <TnTDatePicker TextProperty="Value" @bind-Value="_value" Icon="search" Label="My Label" HelperText="My Helper Text" />
                </div>
            </div>
        </TnTForm>

        <div class="tnt-row">

            <div class="tnt-col s12 m6">
                <TnTForm FormType="FormType.Outlined">
                    <TnTDatePicker TextProperty="Value" @bind-Value="_value" Icon="search" Label="My Label" HelperText="My Helper Text" Placeholder="My Placeholder" />
                    <TnTCheckbox Label="My Label" HelperText="My Helper Text" />
                    <TnTSwitch Label="My Label" HelperText="My Helper Text" />

                </TnTForm>
                <TnTForm FormType="FormType.Default">
                    <TnTDatePicker TextProperty="Value" @bind-Value="_value" Icon="search" Label="My Label" HelperText="My Helper Text" Placeholder="My Placeholder" />
                    <TnTCheckbox Label="My Label" HelperText="My Helper Text" />
                    <TnTSwitch Label="My Label" HelperText="My Helper Text" />

                </TnTForm>

                <TnTForm FormType="FormType.Filled">
                    <TnTDatePicker TextProperty="Value" @bind-Value="_value" Icon="search" Label="My Label" HelperText="My Helper Text" Placeholder="My Placeholder" />
                    <TnTCheckbox Label="My Label" HelperText="My Helper Text" />
                    <TnTSwitch Label="My Label" HelperText="My Helper Text" />

                </TnTForm>
            </div>
            <div class="tnt-col s12 m6">
                <TnTForm FormType="FormType.Outlined">
                    <TnTDatePicker TextProperty="Value" @bind-Value="_value" Icon="search" Label="My Label" HelperText="My Helper Text" />
                </TnTForm>

                <TnTForm FormType="FormType.Default">
                    <TnTDatePicker TextProperty="Value" @bind-Value="_value" Icon="search" Label="My Label" HelperText="My Helper Text" />
                </TnTForm>

                <TnTForm FormType="FormType.Filled">
                    <TnTDatePicker TextProperty="Value" @bind-Value="_value" Icon="search" Label="My Label" HelperText="My Helper Text" />
                </TnTForm>
            </div>
        </div>
        <div class="tnt-row">

            <div class="tnt-col s12 m6">

                <TnTForm FormType="FormType.Outlined">
                    <TnTDatePicker TextProperty="Value" Disable="true" @bind-Value="_value" Label="My Label" HelperText="My Helper Text" Placeholder="My Placeholder" />
                    <TnTCheckbox Disable="true" Label="My Label" HelperText="My Helper Text" />
                    <TnTSwitch Disable="true" Label="My Label" HelperText="My Helper Text" />
                </TnTForm>

                <TnTForm FormType="FormType.Default">
                    <TnTDatePicker TextProperty="Value" Disable="true" @bind-Value="_value" Label="My Label" HelperText="My Helper Text" Placeholder="My Placeholder" />
                    <TnTCheckbox Disable="true" Label="My Label" HelperText="My Helper Text" />
                    <TnTSwitch Disable="true" Label="My Label" HelperText="My Helper Text" />
                </TnTForm>

                <TnTForm FormType="FormType.Filled">
                    <TnTDatePicker TextProperty="Value" Disable="true" @bind-Value="_value" Label="My Label" HelperText="My Helper Text" Placeholder="My Placeholder" />
                    <TnTCheckbox Disable="true" Label="My Label" HelperText="My Helper Text" />
                    <TnTSwitch Disable="true" Label="My Label" HelperText="My Helper Text" />
                </TnTForm>
            </div>
            <div class="tnt-col s12 m6">
                <TnTForm FormType="FormType.Outlined">
                    <TnTDatePicker TextProperty="Value" Disable="true" @bind-Value="_value" Label="My Label" HelperText="My Helper Text" />
                </TnTForm>

                <TnTForm FormType="FormType.Default">
                    <TnTDatePicker TextProperty="Value" Disable="true" @bind-Value="_value" Label="My Label" HelperText="My Helper Text" />
                </TnTForm>

                <TnTForm FormType="FormType.Filled">
                    <TnTDatePicker TextProperty="Value" Disable="true" @bind-Value="_value" Label="My Label" HelperText="My Helper Text" />
                </TnTForm>

            </div>
        </div>
        @_value
        <TnTCard CardType="CardType.Outlined">
            <TnTButton ButtonType="ButtonType.Outlined" Text="Text"></TnTButton>
            <TnTButton ButtonType="ButtonType.Flat" Text="Text"></TnTButton>
            <TnTButton ButtonType="ButtonType.Filled" Text="Text"></TnTButton>
            <TnTButton ButtonType="ButtonType.Default" Text="Text"></TnTButton>
        </TnTCard>

        <TnTCard CardType="CardType.Filled">
            <TnTButton ButtonType="ButtonType.Outlined" Text="Text"></TnTButton>
            <TnTButton ButtonType="ButtonType.Flat" Text="Text"></TnTButton>
            <TnTButton ButtonType="ButtonType.Filled" Text="Text"></TnTButton>
            <TnTButton ButtonType="ButtonType.Default" Text="Text"></TnTButton>
        </TnTCard>

        <TnTCard CardType="CardType.Flat">
            <TnTButton ButtonType="ButtonType.Outlined" Text="Text"></TnTButton>
            <TnTButton ButtonType="ButtonType.Flat" Text="Text"></TnTButton>
            <TnTButton ButtonType="ButtonType.Filled" Text="Text"></TnTButton>
            <TnTButton ButtonType="ButtonType.Default" Text="Text"></TnTButton>
        </TnTCard>
    </TnTBody>
</TnTLayout>


<HeadContent>
    @if (_dark) {
        <link rel="stylesheet" href="_content/TnTComponents/style.dark.min.css" />
    }
    else {
        <link rel="stylesheet" href="_content/TnTComponents/style.light.min.css" />
    }
    </HeadContent>


    @code {
    private bool _dark = false;
    private bool _sideBarExpanded = false;

    private DateOnly? _value;

    private HashSet<DateOnly> _disabledDates = new HashSet<DateOnly>() {
        DateOnly.FromDateTime(DateTime.Today),
        DateOnly.FromDateTime(DateTime.Today.AddDays(-1)),
        DateOnly.FromDateTime(DateTime.Today.AddDays(-3)),
        DateOnly.FromDateTime(DateTime.Today.AddDays(-5)),
        DateOnly.FromDateTime(DateTime.Today.AddDays(-7)),
        DateOnly.FromDateTime(DateTime.Today.AddDays(-9)),
        DateOnly.FromDateTime(DateTime.Today.AddDays(-11)),
        DateOnly.FromDateTime(DateTime.Today.AddDays(1)),
        DateOnly.FromDateTime(DateTime.Today.AddDays(3)),
        DateOnly.FromDateTime(DateTime.Today.AddDays(5)),
        DateOnly.FromDateTime(DateTime.Today.AddDays(7)),
        DateOnly.FromDateTime(DateTime.Today.AddDays(9)),
        DateOnly.FromDateTime(DateTime.Today.AddDays(11))
    };

    public Dictionary<string, object> C = new Dictionary<string, object>() {
        { "class", "tnt-form" }

    };
    public Dictionary<string, object> D = new Dictionary<string, object>() {
        { "class", "tnt-input-field"}
    };

    private void SideBarExpanded(bool expanded) {
        _sideBarExpanded = expanded;
    }
}