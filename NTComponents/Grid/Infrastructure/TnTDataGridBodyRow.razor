@using NTComponents.Core
@typeparam TGridItem
@inherits TnTDataGridRow<TGridItem>

<tr @attributes="AdditionalAttributes"
    class="@_elementClass"
    @onclick="@(Context.RowClickCallback.HasDelegate ? () => Context.RowClickCallback.InvokeAsync(Item) : null!)"
    @key="Context.ItemKey.Invoke(Item)" style="@($"height: {Context.Grid.ItemSize}px;max-height:{Context.Grid.ItemSize}px")">
    @foreach (var column in Context.Columns) {
        <TnTDataGridBodyCell TGridItem="@TGridItem" Column="@column" Item="@Item" />
    }
    @if (Context.RowClickCallback.HasDelegate) {
        <TnTRippleEffect />
    }
</tr>