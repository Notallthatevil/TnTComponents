@namespace NTComponents
@using NTComponents.Grid.Columns
@typeparam TGridItem
@inherits TnTColumnBase<TGridItem>

@code {
	public override RenderFragment RenderCellContent(TGridItem gridItem) => (__builder) => {
		if (ShowContentAsTooltip) {
			<TnTTooltip>
				@ChildContent(gridItem)
			</TnTTooltip>
		}
		@ChildContent(gridItem)
	};
}