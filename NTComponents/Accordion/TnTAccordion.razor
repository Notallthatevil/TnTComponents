@using NTComponents.Core
@using NTComponents.Accordion
@inherits TnTPageScriptComponent<TnTAccordion>
@namespace NTComponents

<CascadingValue IsFixed="true" Value="this">
    <tnt-accordion @attributes="AdditionalAttributes"
                   class="@ElementClass"
                   style="@ElementStyle"
                   title="@ElementTitle"
                   id="@ElementId"
                   lang="@ElementLang"
                   autofocus="@AutoFocus"
                   @ref="Element">
        <DeferRendering>
            @foreach (var (_, child) in _children.OrderBy(kv => kv.Value.Order)) {
                <_TnTAccordionChildRender Child="@child" />
            }
        </DeferRendering>
        @ChildContent
    </tnt-accordion>
</CascadingValue>

@PageScript
