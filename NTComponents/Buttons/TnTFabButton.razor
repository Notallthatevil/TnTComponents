@namespace NTComponents
@using NTComponents.Core
@using NTComponents.Interfaces
@inherits TnTComponentBase

<div class="tnt-fab-button-container">
    <button @attributes="AdditionalAttributes"
            class="@($"tnt-fab-button {ElementClass}")"
            style="@ElementStyle"
            type="@Type.ToHtmlAttribute()"
            name="@ElementName"
            disabled="@Disabled"
            autofocus="@AutoFocus"
            title="@ElementTitle"
            id="@ElementId"
            @onclick="OnClickCallback"
            @onclick:stopPropagation="StopPropagation"
            @ref="Element">
        @if (Tooltip is not null) {
            <TnTTooltip>
                @Tooltip
            </TnTTooltip>
        }
        @ChildContent
        @if (EnableRipple) {
            <TnTRippleEffect />
        }
    </button>
</div>