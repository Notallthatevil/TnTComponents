@namespace NTComponents
@using NTComponents.Core
@using NTComponents.Interfaces
@inherits TnTComponentBase

<button @attributes="AdditionalAttributes"
        class="@ElementClass"
        style="@ElementStyle"
        lang="@ElementLang"
        id="@ElementId"
        title="@ElementTitle"
        onclick="NTComponents.toggleSideNav(event)"
        @ref="Element" >

    @Icon.Render()
    @if (EnableRipple) {
        <TnTRippleEffect />
    }

</button> 
