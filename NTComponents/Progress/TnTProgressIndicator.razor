@namespace NTComponents
@using NTComponents.Core
@inherits TnTComponentBase

@if (Show) {
    <progress @attributes="AdditionalAttributes"
              class="@ElementClass"
              max="@Max"
              value="@Value"
              style="@ElementStyle"
              autofocus="@AutoFocus"
              lang="@ElementLang"
              title="@ElementTitle"
              id="@ElementId"
              @ref="Element">
        @ChildContent
    </progress>
}