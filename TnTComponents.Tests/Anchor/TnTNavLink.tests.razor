@using Bunit
@using TnTComponents.Tests.TestingUtility
@using TnTComponents
@inherits Bunit.TestContext

@code {
    public TnTNavLink_tests() {
        TnTComponents.Tests.TestingUtility.TestingUtility.SetupRippleEffectModule(this);
    }
    [Fact]
    public void TnTNavLink_Renders_BasicNavLink()
    {
        // Arrange
        // (No setup needed)

        // Act
        var cut = Render(@<TnTNavLink href="/test">Test Link</TnTNavLink>);

        // Assert
        cut.Markup.Should().Contain("Test Link");
        cut.Markup.Should().Contain("href=\"/test\"");
    }

    [Fact]
    public void TnTNavLink_Renders_WithActiveClass()
    {
        // Arrange
        // (No setup needed)

        // Act
        var cut = Render(@<TnTNavLink href="/active" ActiveClass="active">Active</TnTNavLink>);

        // Assert
        cut.Markup.Should().Contain("Active");
        cut.Markup.Should().Contain("active");
    }
}
